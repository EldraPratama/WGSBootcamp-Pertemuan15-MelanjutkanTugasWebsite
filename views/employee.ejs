  <!-- menampilkan contact list -->
  <div class="container">
    <h1>Hello to Employe Page</h1>
    <a href="/employee/add" class="btn btn-primary mb-3"><i class="bi bi-person-plus-fill"></i> Add Employee</a>
    <h3><i class="bi bi-person-lines-fill"></i> Employee List</h3>
    <div class="row">
        <div class="col">

            <!-- menampilkan pesan -->
            <% if (msg.length !== 0) { %>
                <div class="alert alert-success" role="alert"> <%= msg %> </div>
            <% } %>

            <% if (msg2.length !== 0) { %>
                <div class="alert alert-warning" role="alert"> <%= msg2 %> </div>
            <% } %>

            <table class="table table-striped table-hover  mt-3">
                <thead class="table-primary">
                    <tr>
                        <th>No</th>
                        <th>Nama</th>
                        <th>Phone</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (cont.length == 0) { %>
                        <tr><td colspan="3"><center><b>Employee masih kosong</b></td></tr>
                    <% }else{ %>  
                        <% cont.forEach( (con,index) => { %>
                            <tr>
                                <td><%= index+1 %></td>
                                <td><%= con.name %> </td>
                                <td><%= con.phone %> </td>                    
                                <td>
                                    <a href="/employee/<%= con.name %>">
                                        <span class="badge rounded-pill text-bg-success">detail</span>   
                                    </a>
                                    <a href="/employee/delete/<%= con.name %>">
                                        <span class="badge rounded-pill text-bg-danger" onclick="return confirm('yakin?');">hapus</span>   
                                    </a>
                                    <!-- <a href="/contact/edit/<%= con.name %>">
                                        <span class="badge rounded-pill text-bg-primary">edit</span>   
                                    </a> -->
                                </td>                    
                            </tr>
                        <% }) %>
                    <% } %> 
                </tbody>
            </table>
               
        </div>
    </div>
</div>

